<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nosotros</title>
  <link rel="stylesheet" href="/css/GlobalStyle.css">
  <!-- Incluye estilos de Font Awesome -->
<link href="/@fortawesome/fontawesome-free/css/all.css" rel="stylesheet">

</head>

<body>
  <div class="top">
    <a href="/"><img src="/theme/4"></a>
  </div>
  <div class="medium-video">
    <div class="content-movies">
        <div class="grid-video">
            <% videos.forEach((video)=> { %>
                <a href="/play/movie/<%= video.id %>" class="cart-box">
                    <div class="cover">
                        <video id="video" class="ads-video" controls>
                            <source src="/video/<%= video.id %>" type="video/mp4">
                        </video>
                    </div>
                    <h3>
                        <%= video.name %>
                    </h3>
                </a >
                <% }); %>
        </div>
    </div>
  </div>
  <div class="bottom">
    <img src="/theme/0">
  </div>

  <script>
    document.getElementById('video').addEventListener('play', function () {
            this.requestFullscreen();
        });
  </script>
</body>

</html>